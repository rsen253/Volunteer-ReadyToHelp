            <h3 class="text-center">Sign Up with </h3>
            <p class="text-center">
                <button style="background-color: #405d9b;color:#ffffff" type="button" class="btn btn-default btn-lg">
                    <i class="fa fa-facebook" aria-hidden="true"></i> facebook
                </button>
            </p>
            <p class="text-center">
                <button style="background-color: #dd4b38;color:#ffffff" type="button" class="btn btn-default btn-lg">
                    <i class="fa fa-google-plus" aria-hidden="true"></i> google-plus
                </button>
            </p>
            <p class="text-center">
                <button style="background-color: #31bbf0;color:#ffffff" type="button" class="btn btn-default btn-lg">
                    <i class="fa fa-twitter" aria-hidden="true"></i> twitter
                </button>
            </p>
        </div>*@
        <div class="col-md-4">
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>
    </div>
</div>

